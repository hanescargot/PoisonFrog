<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/frog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null_frog_name"
            android:textSize="24sp"
            android:layout_toRightOf="@id/iv_power"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator: null"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/frog_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROPERTY: null"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:id="@+id/frog_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIZE : null"
            android:layout_toRightOf="@id/iv_power"
            android:layout_below="@id/frog_property"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:id="@+id/frog_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POWER: null"
            android:layout_toRightOf="@id/iv_power"
            android:layout_below="@id/frog_size"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>
</RelativeLayout>