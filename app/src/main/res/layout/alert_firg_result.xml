<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_box_grey"
    android:layout_width="336dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@id/frog_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Null Frog"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingVertical="8dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_frog_jelly"/>

        <RelativeLayout
            android:id="@+id/calculator"
            android:layout_width="200dp"
            android:layout_height="152dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/iv">

            <ImageView
                android:id="@+id/iv_size"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_size" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="+20Size"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_power"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/iv_size"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_power" />

            <TextView
                android:id="@+id/tv_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_size"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:text="+80Power"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sell"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_box_black_btn"
                android:gravity="center"
                android:text="확인"
                android:paddingHorizontal="16sp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>