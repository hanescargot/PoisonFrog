<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#5555"
    android:layout_width="336dp"
    android:layout_height="336dp"
    android:layout_centerInParent="true"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="336dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/cancel_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/main_cancel_button"
            android:layout_gravity="left|top"/>

        <TextView
            android:id="@id/frog_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Null Frog"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_above="@id/iv"
            android:layout_alignParentLeft="true"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_frog_jelly"/>

        <RelativeLayout
            android:id="@+id/calculator"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/iv">

            <ImageView
                android:id="@+id/house_src"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_house"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/house_price"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:text="20원"/>

            <ImageView
                android:id="@+id/frog_src"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_frog_jelly"
                android:layout_alignTop="@+id/frog_price"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/frog_price"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/house_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:text="80원"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="8dp"
                android:layout_above="@+id/sum"
                android:src="@drawable/border_black_box"/>
            <TextView
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="합계: 100원"/>

        </RelativeLayout>



        <TextView
            android:id="@+id/tv_sell"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="집과 함께 판매"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />


    </RelativeLayout>





</RelativeLayout>