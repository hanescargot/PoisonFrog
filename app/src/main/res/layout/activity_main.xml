<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_weight="0.72"
        android:weightSum="10"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:orientation="horizontal"
       >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@drawable/main_chef_hat"
            android:padding="2dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/food_name_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:inputType="text"
                android:textColorHint="#A8A3A3"
                android:hint="@string/type_food_name"
                android:background="@drawable/border"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:clickable="true"
        android:onClick="hideKeyboard"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/main_frog_jelly"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_gold_notice"
            android:layout_gravity="center"/>

        <ScrollView
            android:id="@+id/log_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginVertical="96dp"
            android:layout_marginHorizontal="40dp">

            <TextView
                android:id="@+id/food_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready..."
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </ScrollView>



    </FrameLayout>

</LinearLayout>