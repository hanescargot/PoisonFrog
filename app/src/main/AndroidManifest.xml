<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyrion.poison_frog">

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/normal"
        android:label="@string/show_app_name"
        android:roundIcon="@drawable/normal"
        android:supportsRtl="true"
        android:theme="@style/Theme.Poison_frog_no_actionbar">
        <activity android:name="com.pyrion.game.poison_frog.kotlin_nfc_write"></activity>
        <activity android:name="com.pyrion.game.poison_frog.kotlin_nfc_read" />
        <activity android:name="com.pyrion.game.poison_frog.Fight.ActivityFight" />
        <activity android:name="com.pyrion.game.poison_frog.Fight.ActivityMatch" />
        <activity android:name="com.pyrion.game.poison_frog.egg.ActivityFrogBook" />
        <activity
            android:name="com.pyrion.game.poison_frog.IntroActivity"
            android:theme="@style/Theme.Poison_frog_no_actionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pyrion.game.poison_frog.center.ItemStore.ActivityItemStore"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity
            android:name="com.pyrion.game.poison_frog.MainActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name="com.pyrion.game.poison_frog.center.fly_game.FlyGameActivity" /> <!-- 리시버 -->
        <receiver android:name="com.pyrion.game.poison_frog.center.Exercise.AlarmReceiver" /> <!-- NFC -->
        <activity
            android:name="com.pyrion.game.poison_frog.Beam"
            android:theme="@style/Theme.ActivityTransparentBackground" />
        <activity
            android:name="com.pyrion.game.poison_frog.NfcSend"
            android:theme="@style/Theme.ActivityTransparentBackground" />
    </application>

</manifest>